<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.cometd</groupId>
    <artifactId>cometd-documentation</artifactId>
    <version>2.4.0-SNAPSHOT</version>
    <name>CometD Documentation</name>
    <packaging>pom</packaging>

    <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <plugin>
                <groupId>com.agilejava.docbkx</groupId>
                <artifactId>docbkx-maven-plugin</artifactId>
                <version>2.0.13</version>
                <executions>
                    <execution>
                        <id>documentation</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>generate-xhtml</goal>
                        </goals>
                        <configuration>
                            <includes>book.xml</includes>
                            <chunkedOutput>false</chunkedOutput>
                            <htmlStylesheet>cometd.css</htmlStylesheet>
                            <postProcess>
                                <copy todir="${project.build.directory}/docbkx/xhtml">
                                    <fileset dir="src/docbkx/css">
                                        <include name="*.css" />
                                    </fileset>
                                </copy>
                                <copy todir="${project.build.directory}/docbkx/xhtml">
                                    <fileset dir="src/docbkx/images">
                                        <include name="*.*" />
                                    </fileset>
                                </copy>
                            </postProcess>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <generatedSourceDirectory>${project.build.directory}/docbkx/generated</generatedSourceDirectory>
                    <xincludeSupported>true</xincludeSupported>
                    <paperType>A4</paperType>
                    <sectionAutolabel>true</sectionAutolabel>
                    <generateToc>book toc,title,figure,table,example,equation</generateToc>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.docbook</groupId>
                        <artifactId>docbook-xml</artifactId>
                        <version>5.0-all</version>
                        <classifier>resources</classifier>
                        <type>zip</type>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>net.sf.xslthl</groupId>
                        <artifactId>xslthl</artifactId>
                        <version>2.0.1</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>net.sf.offo</groupId>
                        <artifactId>fop-hyph</artifactId>
                        <version>1.2</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

</project>
